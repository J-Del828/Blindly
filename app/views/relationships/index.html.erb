<div class="convos-container">
  <div>
    <% @relationships.each do |relationship| %>
      <div class="card-product" style="background-image: linear-gradient(to right, <%= relationship.affinity_color %>, <%= relationship.affinity_color(saturation: "90%", luminosity: "80%") %>);">
        <div class="chat-pic-div">
          <%= image_tag "pp.png", class: "chat-pic" %>
        </div>
        <div class="card-product-infos">
          <h2><%= relationship.partner_2.name %></h2>
          <p>Hi! How are you?</p>
        </div>
      </div>
    <% end %>
  </div>
</div>
