<div class="banner" style="background-image: url(<%= image_path('blindly-bkg-pro.png') %>);">
  <div>
    <div class="logo-image" style="background-image: url(<%= image_path('blindly-logo-white.png') %>);"></div>
    <%# <h1><strong>Blindly</strong></h1> %>
    <h5 class="mb-3">Be your own matchmaker! </h5>
    <%= if !user_signed_in?
      link_to new_user_registration_path do %>
      <button type='button' class='btn btn-outline-light btn-lg mb-4'>Sign Up</button>
      <%= link_to new_user_session_path do %>
        <button type='button' class='btn btn-outline-light btn-lg mb-4'>Log In</button>
          <% end %>
        <% end %>
      <% end %>
  </div>
  <div class="path">
    <i class="fas fa-search"></i>
    <h4>Find a partner</h4>
    <i class="fas fa-link"></i>
    <h4>Chat & connect</h4>
    <i class="fas fa-heart"></i>
    <h4>Arrange a date</h4>
  </div>
</div>
